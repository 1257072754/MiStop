/* pages/order/order.wxss */
page{
    background-color: #F5F6F7;
    padding-top: 88rpx;
}
.navOrder{
    position: fixed;
    left:0px;
    top:0px;
    width: 100%;
    height: 88rpx;
    display: flex;
    background-color: #fff;
    z-index: 10;
}
.navOrder view{
    width: 20%;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 24rpx;
}
.navOrder view.con{
    color:#60c5f1;
    font-size: 28rpx;
    font-weight: bold;
}

.goodslist{
    display: flex;
    padding: 20rpx 0px;
    background-color: #fff;
    margin-bottom: 2rpx;
}
.goodslist .left{
    width: 240rpx;
    text-align: center;
}
.goodslist .right{
    /* 剩下宽度分配给右侧 */
    flex:1;
    height: 200rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.goodslist .left image{
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
}
.goodslist .right image{
    width: 44rpx;
    height: 44rpx;
}
.goodslist .right .goods_name{
    font-size: 36rpx;
    color:#808080;
    height: 100rpx;
    /* 溢出隐藏 */
    overflow: hidden;
}
.goodslist .right .goods_address{
    font-size: 24rpx;
    color:#929292;
}
.goodslist .right .goods_price{
    font-size: 30rpx;
    color:#FF1493;
    margin-top: 50rpx;
}
.goodslist .right .car{
    position: absolute;
    right: 5px;
    bottom: 5px;
    color:#808080;
    font-size: 28rpx;
}

.goodslist .buttons{
    position: absolute;
    right: 100rpx;
    bottom:0px;
}
.goodslist .buttons .btn{
    width: 52rpx;
    height: 52rpx;
    border:1px solid #B2B2B2;
    text-align: center;
    line-height: 52rpx;
    color:#B2B2B2;
    float: left;
}
.goodslist .buttons .num{
    height: 52rpx;
    line-height: 52rpx;
    width: 80rpx;
    font-size: 12px;
    float: left;
    text-align: center;
    border-top:1px solid #B2B2B2;
    border-bottom:1px solid #B2B2B2;
    color:#B2B2B2;
}


.orderList{
    width: 100%;
}
.orderList .order{
    padding:0px 20rpx;
    margin-bottom: 5px;
    background-color: #fff;
}
.orderList .order .h1{
    color:#A6A6A6;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom:1px solid #F5F6F7;
    position: relative;
    font-size: 26rpx;
    display: flex;
    justify-content: space-between;
}
.orderList .order .h1 .type{
    position: absolute;
    color:#F47378;
    top:0px;
    right: 10rpx;
    font-size: 26rpx;
}
.orderList .order .bottom{
    border-top:1px solid #F5F6F7;
    font-size: 28rpx;
}
.orderList .order .bottom{
    padding:10rpx 0px;
    display: flex;
}
.orderList .order .bottom .fl{
    color:#A6A6A6;
    flex:100rpx;
}
.orderList .order .bottom .fl text{
    font-size: 30rpx;
    color:#262626;
}
.orderList .order .bottom .fr{
    flex:1;
    display: flex;
    justify-content: flex-end;
}
.orderList .order .bottom .fr .btn{
    font-size: 24rpx;
    padding:0px 15rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    color:#A6A6A6;
    border:1px solid #a6a6a6;
    border-radius: 5px;
    margin-right: 10px;
}