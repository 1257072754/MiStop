/* pages/details/details.wxss */
page {
    background-color: #F6F6F6;
    padding-bottom: 110rpx;
}

.banner {
    position: relative;
}

.banner image {
    width: 100%;
}



.banner .indicator {
    height: 44rpx;
    line-height: 44rpx;
    width: 80rpx;
    background-color: rgba(0, 0, 0, 0.6);
    position: absolute;
    right: 24rpx;
    bottom: 30rpx;
    color: #fff;
    text-align: center;
    font-size: 24rpx;
    border-radius: 22rpx;
}

.infos {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.infos .content {
    padding: 10rpx 30rpx;
}

.infos .content .price {
    height: 76rpx;
    line-height: 76rpx;
    letter-spacing: -1px;
    font-size: 50rpx;
    font-weight: bold;
    color: #FF3204;
}

.infos .content .price .ss {
    font-size: 24rpx;
    vertical-align: 10px;
}

.infos .content .price .oldprice {
    font-size: 24rpx;
    color: rgba(0, 0, 0, .54);
    text-decoration: line-through;
}

.infos .content .title {
    font-size: 32rpx;
    font-weight: 700;
    /* height: 54rpx; */
    line-height: 54rpx;
}

.infos .content .dl {
    font-size: 24rpx;
}

.infos .content .dl .dt {
    line-height: 40rpx;
}

.infos .content .dl .dd {
    height: 40rpx;
    line-height: 40rpx;
}

.details {
    background-color: #fff;
}

.details .tabs {
    display: flex;
    border-bottom: 1px solid #F6F6F6;
}

.details .tabs view {
    flex: 1;
    text-align: center;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 24rpx;
}

.details .tabs view.con {
    color: #FF471E;
}

.details .goodsDetails image {
    width: 100%;
}

.buttons {
    position: fixed;
    left: 0px;
    bottom: 0px;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    display: flex;
}

.home {
    flex: 0 0 104rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.home image {
    width: 50rpx;
    height: 50rpx;
}

.car {
    flex: 0 0 104rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.car .img {
    width: 50rpx;
    height: 50rpx;
    position: relative;
}

.car .img .num {
    position: absolute;
    top: -6px;
    right: -6px;
    background-color: #FF3204;
    color: #fff;
    padding: 0px 8rpx;
    font-size: 24rpx;
    border-radius: 50%;
}

.car image {
    width: 50rpx;
    height: 50rpx;
}

.collect {
    flex: 0 0 104rpx;
    display: flex;
    text-align:center;
    justify-content: center;
    align-items: center;
}
.collect .text{
    font-size: 24rpx;

}
.collect .iconfont{
    font-size: 40rpxrpx;
    
}
.collect .icon-favorfill{
    color: #fec955;
}

.setCar {
    flex: 1;
    margin-left: 12rpx;
    text-align: center;
    height: 76rpx;
    margin-top: 10rpx;
    line-height: 76rpx;
    background-image: linear-gradient(to right, #fdcf00, #fd9b00);
    border-radius: 38rpx 0 0 38rpx;
    color: #fff;
    font-size: 28rpx;
}

.pay {
    flex: 1;
    margin-right: 30rpx;
    text-align: center;
    height: 76rpx;
    margin-top: 10rpx;
    line-height: 76rpx;
    background-image: linear-gradient(90deg, #ff7310, #fe3f00);
    border-radius: 0px 38rpx 38rpx 0px;
    color: #fff;
    font-size: 28rpx;
}