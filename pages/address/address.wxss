/* pages/address/address.wxss */


.addressWrap {
  padding: 20rpx 26rpx 20rpx 26rpx;
  box-sizing: border-box;
  position: relative;

}

.wrap {
  background-color: #fff;
  border-radius: 40rpx;
  padding: 40rpx 32rpx;
  width: 100%;
  box-sizing: border-box;
  /* height: 256rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.wrap .left {
  display: flex;

}

.wrap .left .label {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 60rpx;
  overflow: hidden;
  background: #fee4db;
  color: #f1a988;
}

.wrap .right {
  margin-left: 20rpx;
  flex: 1;
  display: flex;

  justify-content: space-between;
  align-items: center;
}

.wrap .right .top {
  /* flex: 1; */
  width: 500rpx;
  /* white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden; */
  word-wrap: break-word;
  /* word-break: break-all; */
}

.wrap .right .top .name {
  max-width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 40rpx;
  font-weight: 600;
  display: inline-block;
  margin-right: 10rpx;

}

.wrap .right .top .phone {
  font-size: 24rpx;
  
  color: #d9d9d9;
  display: inline-block
}

.wrap .right .area,
.address {
  font-size: 26rpx;
  display: inline-block;
  color: #333333;

}

.wrap .right image {

  width: 36rpx;
  height: 36rpx;
}


.bottomCart {
  /* 固定定位 */
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}


.bottomCart .newAdd {
  color: #ff0000;
}

.bottomCart .newAdd {

  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #ff7e30;
  color: #fff;
  font-size: 28rpx;
  border-radius: 60rpx;

}

.goodsNull {
  text-align: center;
  font-size: 40rpx;
  color: #929292;
  margin-top: 100rpx;
  margin-bottom: 200rpx;
}

.goodsNull image {
  width: 120rpx;
  height: 120rpx;
}