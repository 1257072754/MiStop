.interestthreecheckbox .wx-checkbox-input {
    border-radius: 50%;
    width: 35rpx;
    height: 35rpx;
}

.interestthreecheckbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: #fff;
    border: 1px solid #bfbfbf;
}

wx-checkbox .wx-checkbox-input.wx-checkbox-input-checked:before {
    font: normal normal normal 14px/1 "weui";
    content: "\EA08";
    font-size: 22px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -48%) scale(0.73);
    -webkit-transform: translate(-50%, -48%) scale(0.73);
}

.interestthreecheckbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 30rpx;
    /* 选中后对勾大小 */
    height: 30rpx;
    /* 选中后对勾大小 */
    font-size: 30rpx;
    /* 对勾大小30rpx */
    color: #fe4505;
    /* 对勾颜色 白色 */
}

.commonTitle {
    height: 104rpx;
    line-height: 104rpx;
    margin-top: 24rpx;
    padding-left: 13px;
    font-size: 36rpx;
    /* 字体缩进 1em 一个字距离 */
    /* text-indent: 1em; */
}



.goodswrap {
    padding: 30rpx 26rpx 30rpx 26rpx;
    box-sizing: border-box;
    position: relative;

}

.goodslist {
    background-color: #fff;
    border-radius: 40rpx;
    padding: 26rpx;
    width: 100%;
    box-sizing: border-box;
    height: 256rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: 1;
}

.goodslist .left {
    display: flex;
    flex: 0 0 26rpx;
}

.goodslist .right {
    display: flex;
    align-items: center;
    height: 100%;
    flex: 1;

}

.goodslist .right .img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.goodslist .right .img image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 40rpx;
}

.goodslist .right .shopInfo {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.goodslist .right .shopInfo .goods_name {
    font-size: 40rpx;
    font-weight: 600;
    color: #343434;
}

.goodslist .right .shopInfo .goods_price {
    font-size: 36rpx;
    color: #ff7e30;
}

.goodslist .right .shopInfo .account {
    font-size: 20rpx;
    color: #adadad;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.goodswrap .btn {
    position: absolute;
    bottom: 30rpx;
    right: 40rpx;
    width: 160rpx;
    display: flex;
    align-items: center;
}

.goodswrap .btn .redbtn {
    font-size: 60rpx;
    color: #adadad;

}

.goodswrap .btn .count {
    width: 80rpx;
    height: 40rpx;
    background: #f9f9f9;
    text-align: center;
    line-height: 40rpx;
}

.goodswrap .btn .addbtn {
    font-size: 40rpx;
    color: #343434;

}

.goodslist .cart image {
    flex: 0 0 76rpx;
    width: 36rpx;
    height: 36rpx;
}


.bottomCart {
    /* 固定定位 */
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    background-color: #fff;
}

.bottomCart .warp {
    padding: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #000;
}

.bottomCart .warp text {
    color: #ff0000;
}

.bottomCart .warp .order {
    float: right;
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background-color: #ff7e30;
    color: #fff;
    font-size: 28rpx;
    border-radius: 8rpx;
    position: absolute;
    right: 10px;
    bottom: 10px;
}

.goodsNull {
    text-align: center;
    font-size: 40rpx;
    color: #929292;
    margin-top: 100rpx;
    margin-bottom: 200rpx;
}

.goodsNull image {
    width: 120rpx;
    height: 120rpx;
}