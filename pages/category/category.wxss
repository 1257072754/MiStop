/* pages/category/category.wxss */
page {
  display: flex;

}

.categoryItem {
  width: 25%;
  height: 100vh;
  background-color: #f7f6f6;
  background-color: #fff;
}

.categoryItem .item view {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 28rpx;
  color: #666666;
  text-indent: 32rpx;
  position: relative;
}

.categoryItem .item view.con {
  background-color: #fff;
  color: #111111;
  font-weight: 800;
}

.categoryItem .item view.con::after {
  content: "";
  display: block;
  width: 4rpx;
  height: 28rpx;
  background-color: #FF5A35;
  position: absolute;
  left: 0px;
  top: 50%;
  transform: translateY(-50%);
}

.categoryContent {
  background-color: #fff;
  width: 75%;
  height: 100vh;
}

.categoryContent .content {
  width: 100%;
}

.categoryContent .content .h3 {
  text-align: center;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #2F2F2F;
}

.categoryContent .content .ul {
  display: flex;
  flex-wrap: wrap;
}

.categoryContent .content .ul .li {
  width: 33.33%;
  text-align: center;
  margin-bottom: 20rpx;
}

.categoryContent .content .ul .li image {
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 0 auto;
}

.categoryContent .content .ul .li text {
  font-size: 12px;
  color: #333333;
}